{
  "manifest_version": 3,
  "name": "GenSnitch",
  "version": "0.2.0",
  "description": "Check if an image is AI-generated using local analysis (C2PA, EXIF, PNG metadata)",
  "permissions": [
    "contextMenus",
    "storage",
    "scripting",
    "activeTab",
    "offscreen"
  ],
  "optional_host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "GenSnitch - AI Image Detector"
  },
  "web_accessible_resources": [
    {
      "resources": ["wasm/*.wasm"],
      "matches": ["<all_urls>"]
    }
  ]
}
